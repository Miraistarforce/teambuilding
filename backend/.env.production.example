# 本番環境設定例
# このファイルを .env.production としてコピーし、実際の値を設定してください

# データベース設定
# PostgreSQLの例: postgresql://user:password@host:port/database?schema=public
DATABASE_URL=postgresql://teambuilding_user:your_secure_password@localhost:5432/teambuilding_db?schema=public

# サーバー設定
PORT=3001
NODE_ENV=production

# JWT設定 - 必ず強力なランダム文字列に変更してください！
# 生成方法: openssl rand -base64 64
JWT_SECRET=your_production_jwt_secret_here
JWT_EXPIRES_IN=24h

# CORS設定 - 本番環境のドメインを設定
CORS_ORIGIN=https://your-domain.com,https://app.your-domain.com

# OpenAI API設定
OPENAI_API_KEY=your_openai_api_key_here

# ファイルアップロード設定
UPLOAD_DIR=/var/www/teambuilding/uploads
MAX_FILE_SIZE=52428800

# ログ設定
LOG_LEVEL=error
LOG_DIR=/var/log/teambuilding

# SSL/HTTPS設定（オプション）
HTTPS_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/your-cert.pem
SSL_KEY_PATH=/etc/ssl/private/your-key.pem

# レート制限設定
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# セッション設定
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400000

# Redis設定（キャッシュとセッション用 - オプション）
REDIS_URL=redis://localhost:6379

# メール設定（通知用 - オプション）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@your-domain.com

# Sentry設定（エラー監視 - オプション）
SENTRY_DSN=your_sentry_dsn_here

# バックアップ設定
BACKUP_DIR=/var/backups/teambuilding
BACKUP_RETENTION_DAYS=30